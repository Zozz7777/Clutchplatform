{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/client",
    "rootDir": "./src/client",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx"
  },
  "include": [
    "src/client/**/*",
    "src/renderer/**/*"
  ],
  "exclude": [
    "src/server/**/*"
  ]
}
