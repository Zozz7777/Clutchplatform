# Database Configuration (MongoDB Atlas - Native Driver)
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/?retryWrites=true&w=majority&appName=Clutch
MONGODB_DB=clutch

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Configuration
PORT=5000
NODE_ENV=development

# Firebase SMS Configuration (Primary for OTP and notifications)
FIREBASE_SMS_ENABLED=true

# Firebase Admin Configuration (Required for SMS)
FIREBASE_ADMIN_PROJECT_ID=your_firebase_project_id
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Firebase Admin Private Key Here\n-----END PRIVATE KEY-----"
FIREBASE_ADMIN_CLIENT_EMAIL=your_firebase_admin_client_email@your_project.iam.gserviceaccount.com

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# Google Maps API (Optional)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Stripe Configuration (Required for Payment Processing)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
STRIPE_SUCCESS_URL=https://clutch-frontend.onrender.com/payment/success
STRIPE_CANCEL_URL=https://clutch-frontend.onrender.com/payment/cancel

# REAL-TIME, MONITORING & CDN CONFIGURATION
REALTIME_ENABLED=true
MONITORING_ENABLED=true
CDN_ENABLED=true

# HELMET SECURITY CONFIGURATION
HELMET_ENABLED=true
HELMET_CONTENT_SECURITY_POLICY=true
HELMET_HSTS_MAX_AGE=31536000
HELMET_HIDE_POWERED_BY=true
HELMET_FRAMEGUARD=true
HELMET_XSS_PROTECTION=true

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://admin.yourclutch.com,https://yourclutch.com
CORS_CREDENTIALS=true

# Keep-Alive Configuration
KEEP_ALIVE_URL=https://clutch-main-nk7x.onrender.com/health/ping
