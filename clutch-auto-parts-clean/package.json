{
  "name": "clutch-auto-parts-system",
  "version": "1.0.0",
  "description": "Clutch Auto Parts Management System - Windows Desktop Application",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:backend": "node scripts/test-backend-connections.js",
    "test:backend:verbose": "node scripts/test-backend-connections.js --verbose",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/"
  },
  "keywords": [
    "auto-parts",
    "inventory-management",
    "pos-system",
    "clutch",
    "arabic",
    "rtl"
  ],
  "author": "Clutch Platform",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0",
    "electron-packager": "^17.1.2",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "typescript": "^5.2.0"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "chart.js": "^4.4.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.0",
    "moment": "^2.29.4",
    "moment-hijri": "^2.0.0",
    "ws": "^8.14.0",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.clutch.autoparts",
    "productName": "Clutch Auto Parts System",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "requestedExecutionLevel": "asInvoker",
      "sign": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/"
      }
    ]
  }
}
