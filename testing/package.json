{
  "name": "clutch-testing-suite",
  "version": "1.0.0",
  "description": "Comprehensive testing suite for Clutch Platform",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "playwright test",
    "test:mobile": "node mobile/android-test-suite.js",
    "test:performance": "node performance/load-testing.js",
    "test:security": "node security/security-scan.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:mobile && npm run test:performance",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:setup": "node scripts/setup-test-environment.js",
    "test:env:setup": "docker-compose -f environments/docker-compose.test.yml up -d",
    "test:env:teardown": "docker-compose -f environments/docker-compose.test.yml down",
    "test:data:generate": "node data/test-data-generator.js",
    "test:data:clean": "node scripts/clean-test-data.js",
    "test:report": "node scripts/generate-test-report.js",
    "test:ci": "npm run test:setup && npm run test:all && npm run test:report"
  },
  "keywords": [
    "testing",
    "clutch",
    "automotive",
    "e2e",
    "mobile",
    "performance"
  ],
  "author": "Clutch Testing Team",
  "license": "MIT",
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "@playwright/test": "^1.40.0",
    "artillery": "^2.0.0",
    "bcryptjs": "^3.0.2",
    "jest": "^29.7.0",
    "mongodb": "^6.3.0",
    "mongodb-memory-server": "^9.1.3",
    "supertest": "^6.3.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "eslint": "^8.55.0",
    "nodemon": "^3.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/testing/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/testing/**"
    ],
    "coverageDirectory": "reports/coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/testing/setup/jest-setup.js"
    ],
    "testTimeout": 30000,
    "verbose": true
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
